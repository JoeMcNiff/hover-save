{
  "name": "Hover Save (Ctrl+Space)",
  "description": "Downloads the image under your cursor via a keyboard shortcut.",
  "version": "1.1.0",
  "manifest_version": 3,
  "permissions": ["downloads", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": { "default_title": "Hover Save" },
  "commands": {
    "save-hover-image": {
      "description": "Download hovered image"
    }
  }
}
