{
  "name": "Hover Save (J + 7/8/9/0)",
  "description": "Downloads the hovered image and reports its class after download.",
  "version": "2.0.0",
  "manifest_version": 3,

  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "<all_urls>"
  ],

  "background": { "service_worker": "background.js" },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "action": {
    "default_title": "Hover Save"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": false
  }


}
