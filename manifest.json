{
  "name": "Hover Save (J + 7/8/9/0)",
  "description": "Downloads the hovered image and reports its class after download.",
  "version": "2.0.0",
  "manifest_version": 3,

  "permissions": ["downloads", "activeTab"],
  "host_permissions": [
    "<all_urls>",
    "https://b6f97b9877eb.ngrok-free.app/*"
  ],

  "background": { "service_worker": "background.js" },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "action": { "default_title": "Hover Save" }
}
